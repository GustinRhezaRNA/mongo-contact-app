<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>

      <a
        href="/contact/add"
        class="btn btn-success mb-2"
        >Tambah Data Kontak</a
      >

      <% if (msg.length !== 0) { %>
      <div
        class="alert alert-success fw-bold"
        role="alert"
      >
        <%= msg %>
        <br />
      </div>
      <% } %> <% if (contacts.length===0) { %>
      <div
        class="alert alert-danger fw-bold"
        role="alert"
      >
        Data contact kosong
        <br />
        <!-- <a
            href="/contact"
            class="alert-link fw-normal"
            >&laquo; kembali ke daftar kontak</a
          > -->
      </div>
      <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Number</th>
            <th scope="col">Action</th>
          </tr>
        </thead>

        <tbody>
          <% contacts.forEach((contact,i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                class="btn btn-dark badge rounded-pil"
                href="/contact/<%= contact.nama %>"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
        </tbody>
        <% }) %>
      </table>
      <% } %>
    </div>
  </div>
</div>
